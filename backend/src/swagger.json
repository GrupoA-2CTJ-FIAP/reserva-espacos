{
    "openapi": "3.0.0",
    "info": {
        "title": "API Reserva Espaços",
        "description": "API de manipulação que gerencia as operações de reservas, gestão de usuários e espaços",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/api",
            "description": "API de testes"
        }
    ],
    "paths": {
        "/clients": {
            "post": {
                "summary": "Cadastro de Clientes",
                "description": "Rota para cadastrar usuários",
                "tags": [
                    "Client"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Cliente"
                            },
                            "examples": {
                                "Cliente": {
                                    "value": {
                                        "name": "Nome de Teste",
                                        "email": "email@test.com"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "erro 400"
                    },
                    "201": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "items": {
                                        "$ref": "#/components/schemas/Cliente"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Cliente": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
